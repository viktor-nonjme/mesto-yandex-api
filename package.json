{
    "name": "mesto-yandex-api",
    "version": "1.0.0",
    "description": "api",
    "main": "app.js",
    "scripts": {
        "start": "node app.js",
        "dev": "nodemon app.js"
    },
    "author": "Viktor Nonjme",
    "license": "ISC",
    "dependencies": {
        "body-parser": "^1.19.0",
        "express": "^4.17.1",
        "mongodb": "^3.5.9",
        "mongoose": "^5.9.20",
        "mongoose-validator": "^2.1.0",
        "validator": "^13.1.1"
    },
    "devDependencies": {
        "eslint": "^7.3.1",
        "eslint-config-airbnb-base": "^14.2.0",
        "eslint-plugin-import": "^2.21.2",
        "nodemon": "^2.0.4"
    },
    "eslintConfig": {
        "extends": "airbnb-base",
        "env": {
            "es6": true,
            "browser": true
        },
        "rules": {
            "brace-style": [
                "error",
                "stroustrup"
            ],
            "comma-dangle": [
                "error",
                "never"
            ],
            "no-unused-vars": [
                "warn"
            ],
            "no-var": [
                "off"
            ],
            "one-var": [
                "off"
            ],
            "no-console": [
                "off"
            ],
            "no-underscore-dangle": [
                "off"
            ]
        }
    }
}
